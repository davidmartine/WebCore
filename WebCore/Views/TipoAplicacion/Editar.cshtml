@model TipoAplicacion

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Editar">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <h2 class="text-primary pl-3">Editar Tipo Aplicación</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreTipoAplicacion" class="form-label">Nombre Tipo Aplicación</label>
                    <input asp-for="NombreTipoAplicacion" class="form-control" />
                    <span asp-validation-for="NombreTipoAplicacion" class="text-danger" />
                </div>
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                <a asp-controller="TipoAplicacion" asp-action="Index" class="btn btn-success">Cancelar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
