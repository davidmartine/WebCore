@model Producto

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var titulo = "¿Deseas Eliminar Producto?";
}

<form method="post" asp-action="Eliminar" >
    
        <input asp-for="Id" hidden />
    
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="row">
            <h2 class="text-danger">@titulo</h2>
        </div>
        <div class="row">
            <div class="col-10">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="NombreProducto" class="form-label">Nombre Producto</label>
                            <input asp-for="NombreProducto" disabled class="form-control" />
                            @*<span asp-validation-for="Producto.NombreProducto" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Precio" class="form-label">Precio</label>
                            <input asp-for="Precio" disabled class="form-control" />
                            @*<span asp-validation-for="Producto.Precio" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <input asp-for="Descripcion" disabled class="form-control" />
                            @*<span asp-validation-for="Producto.Descripcion" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row" hidden>
                        <div class="col-md-6">
                            <label asp-for="Observacion" class="form-label">Observación</label>
                            <textarea asp-for="Observacion" disabled class="form-control summernote"></textarea>
                            @*<span asp-validation-for="Producto.Observacion" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="CategoriaId" class="form-label">Categoria</label>
                            <input asp-for="CategoriaId" hidden class="form-control" />
                            <input asp-for="Categoria.NombreCategoria" disabled class="form-control"/>
                            @*<span asp-validation-for="CategoriaId" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="TipoAplicacionId" class="form-label">Tipo Aplicacion</label>
                            <input asp-for="TipoAplicacionId" hidden class="form-control" />
                            <input asp-for="TipoAplcacion.NombreTipoAplicacion" disabled class="form-control" />
                            @*<span asp-validation-for="Producto.TipoAplicacionId" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row" hidden>
                        <div class="col-md-6">
                            <label asp-for="ImagenUrl" class="form-label">Imagen</label>
                            <input asp-for="ImagenUrl" class="form-control" />
                            @*<span asp-validation-for="Producto.ImagenUrl" class="text-danger"></span>*@
                        </div>
                    </div>
                    <br />
                    <div class="d-grid gap-2 d-md-block">

                         <button type="submit" class="btn btn-danger"> Eliminar </button>
                        <a asp-controller="Producto" asp-action="Index" class="btn btn-secundary">
                            Regresar
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-2">
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagenRuta@Model.ImagenUrl" width="100%" style="border-radius: 5px; border: 1px solid #bbb;" />
                }
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
   
}

