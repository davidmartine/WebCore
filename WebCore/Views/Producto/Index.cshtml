@model IEnumerable<Producto>

@{
    ViewData["Title"] = "Informacion Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
                Nuevo Producto
            </a>
        </div>
    </div>
    <br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Nombre Producto
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Tipo
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var listarProductos in Model)
                {
                    <tr>
                        <th>
                            @listarProductos.NombreProducto
                        </th>
                        <th>
                            @listarProductos.Precio
                        </th>
                        <th>
                            @listarProductos.Categoria.NombreCategoria
                        </th>
                        <th>
                            @listarProductos.TipoAplcacion.NombreTipoAplicacion
                        </th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@listarProductos.Id" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@listarProductos.Id" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay Registro de Productos </p>
    }
</div>