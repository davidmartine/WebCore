@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Información Categoria";
}

<h1>@ViewData["Title"]</h1>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Listas de Categorias</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
                Nueva Categoria
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Nombre Categoria
                    </th>
                    <th>
                        Orden
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var listaCategoria in Model)
                {
                    <tr>
                        <th width="50%"> 
                            @listaCategoria.NombreCategoria
                        </th>
                        <th>
                            @listaCategoria.MostrarOrden
                        </th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Categoria" asp-action="Editar" asp-route-Id="@listaCategoria.Id" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                     @*Editar*@
                                </a>
                                <a asp-controller="Categoria" asp-action="Eliminar" asp-route-Id="@listaCategoria.Id" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                    @*Eliminar*@
                                </a>

                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Hay Registros de Categoria</p>
    }
</div>